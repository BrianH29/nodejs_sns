doctype 
html 
    head 
        meta(charset='UTF-8')
        title= title 
        meta(name='viewport' content='width=device-width, user-scalable=no')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        link(rel='stylesheet' href='/main.css')
    body 
        .container 
            .profile-wrap 
                .profile 
                    if user && user.id 
                        .user-name='Hello!' + user.nick 
                        .half 
                            div following 
                            .count.following-count= user.Followings && user.Followings.length || 0
                        .half 
                            div following 
                            .count.follower-count= user.Folowers && user.Followers.length || 0
                        input#my-id(type='hidden' alue=user.id)
                        a#my-profile.btn(href='/profile') My Profile 
                        a#logout.btn(href='/auth/logout') Logout 
                    else 
                        form#login-form(action='/auth/login' method='post')
                            .input-group 
                                label(for='email') Email 
                                input#email(type='email' name='email' required autofocus)
                            .input-group 
                                label(for='password') Password 
                                input#password(type='password' name='password' required)
                            if loginError 
                                .error-message= loginError 
                            a#join.btn(href='/join') Register 
                            button#lgoin.btn(type='submit') Login 
                            a#kakao.btn(href='/auth/kakao') KakaoTalk 

